<form method="post" action="/users">
    <h3>Create a Comment.</h3>
    <label><b>Title: </b></label>
    <input type="text" placeholder="Title" name="question[title]" required>
    <br />
    <label><b>Body: </b></label>
    <input type="text" placeholder="body" name="question[body]" required>
    <br />
    <div class="clearfix">
      <button type="submit" class="signupbtn">Post</button>
    </div>
  </div>
</form>
